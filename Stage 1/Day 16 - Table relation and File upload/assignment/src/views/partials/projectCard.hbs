{{#if projects}}  
<div class="project-lists pt-3" id="project-lists">
{{#each projects}}
   <div class="card-project card overflow-hidden rounded-2">
    <header class="card-header p-0">
      <img src="{{image}}" alt="{{title}}" class="broken-image"/>
    </header>
    <div class="card-body position-relative mt-0 m-0">
      <div class="title w-100">
        <h3 class="fw-bold fs-4 m-0" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{title}}</h3>
        <p>Duration: {{getProjectDuration this}}</p>
      </div>
      <p>
        {{description}}
      </p>
      <div class="w-100">
      <p class="fw-bold fs-5 mb-2">Technologies</p>
      <ul class="icon-list p-0 pb-2">
        {{#each technologies}}
          <li
            style="width:30px; height:30px;"
            class="d-flex justify-content-center align-items-center card-project-tech"
          >{{{getCardIcons .}}}</li>
        {{/each}}
      </ul>
      </div>
      <a href="/projects/{{id}}" style="position:absolute; inset:0;"></a>
    </div>
    {{#if author}}
    <div class="d-flex p-3 pt-0 justify-content-end align-items-center gap-2">
      <p class="p-0 m-0 fw-bold ">{{author}}</p>
      {{>projectAuthor}}
    </div>
    {{/if}}
    {{#if isOwned}}
    
    <footer class="card-footer" data-projectid="${id}">
      <a class="btn btn-dark fw-bold" href="/projects/{{id}}/edit">
        Edit
      </a>
      <form method="post" action="/projects/{{id}}?_method=DELETE" onsubmit="deleteProject(event)">
       <button class="btn btn-dark fw-bold" type="submit">
        Delete
       </button>
      </form>
    </footer>
    {{/if}}
  </div> 
{{/each}}
</div>
{{else}}
<div class="mx-auto d-flex flex-column gap-2 align-items-center py-4">
<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-box2" viewBox="0 0 16 16">
  <path d="M2.95.4a1 1 0 0 1 .8-.4h8.5a1 1 0 0 1 .8.4l2.85 3.8a.5.5 0 0 1 .1.3V15a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V4.5a.5.5 0 0 1 .1-.3zM7.5 1H3.75L1.5 4h6zm1 0v3h6l-2.25-3zM15 5H1v10h14z"/>
</svg>
<p>No project found.</p>
</div>
{{/if}}