<header id="navbar-container">
  <nav class="navbar sticky-top navbar-expand-lg bg-light shadow-sm">
    <div class="container-fluid">
      <a href="/">
      <img
        src="/img/du.png"
        width="50px"
        alt="Dumbways icon"
        class="navbar-brand"
      />   
      </a>
      <span class="d-lg-none ms-auto me-3">
      {{>avatarDropdown}}
      </span>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
   
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        {{>navLists}}
         {{#unless user.isLoggedIn}}
          <div
            class="d-flex flex-column flex-lg-row gap-4 justify-content-start mb-2 mb-lg-0 me-lg-4"
          >
            <a
              class="nav-link"
              href="/auth/register"
            >
              Register
            </a>
            <a
              class="nav-link"
              href="/auth/login"
            >
              Login
            </a>
          </div> 
          {{/unless}}
          <a
          href="/contact"
          class="btn btn-dark flex-grow-0 w-fit mt-2 mt-lg-0"
          >
          Contact Me
          </a>
          <span class="d-none d-lg-block">
         {{>avatarDropdown}}
          </span>
      </div>
    </div>
  </nav>
</header>